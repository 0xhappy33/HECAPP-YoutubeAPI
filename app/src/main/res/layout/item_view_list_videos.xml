<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imgVideoPicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        app:srcCompat="@mipmap/ic_launcher" />
    <TextView
        android:id="@+id/txtNameVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imgVideoPicture"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_toEndOf="@+id/imgVideoPicture"
        android:layout_toRightOf="@+id/imgVideoPicture"
        android:text="@string/example_name_video"
        android:textStyle="bold"
        android:textSize="24sp"/>
    <TextView
        android:id="@+id/txtTimeVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtNameVideo"
        android:layout_alignStart="@+id/txtNameVideo"
        android:layout_centerVertical="true"
        android:text="@string/example_time_video" />
</RelativeLayout>